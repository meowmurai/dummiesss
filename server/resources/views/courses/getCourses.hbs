<h1>This is AllCourses page</h1>
<div class="mt-4">
    <div class="row flex">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card mt-4">
                <div class="card-body">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTFWdSs4pkmV1WIkoIJT5drPxc8tFc2H98hIw&usqp=CAU"
                        alt="">
                    <h5 class="card-title mt-4">{{this.title}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <form action="/u/enroll-course/{{this._id}}" method="post">
                        <button type="submit">Enroll course</button>
                    </form>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>